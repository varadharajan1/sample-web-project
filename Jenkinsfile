pipeline {
    agent any
	tools {
        maven 'LocalMaven'
		jdk 'LocalJava8'
    }
    stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
		stage ('Deploy to Tomcat'){
			steps {
				build job: 'DeployToTomcat'
			}
		}
    }
}
